<Window x:Class="FixEverything.PasswordForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Password" Height="282" Width="680"
        WindowStartupLocation="CenterOwner" Loaded="Window_Loaded" >
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0,0" MappingMode="RelativeToBoundingBox" StartPoint="0.8,0.8">
                <GradientStop Color="#FF0E65BF" Offset="0"/>
                <GradientStop Color="#FF4C8CCF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Center" Margin="62,13,80,0" TextWrapping="Wrap" Text="Please enter the password to continue" VerticalAlignment="Top" FontSize="30" Foreground="White" Width="530" TextAlignment="Center"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Height="39" Margin="74,94,0,0" VerticalAlignment="Top" Width="506" FontSize="24" />
        <Button Content="Submit" x:Name="btnSubmit" HorizontalAlignment="Center" Margin="206,175,219,0" VerticalAlignment="Top" Width="247" Height="56" Background="{x:Null}" BorderBrush="White" Foreground="#FFFDFDFD" FontSize="26" Click="btnSubmit_Click" IsDefault="True" />
    </Grid>
</Window>
